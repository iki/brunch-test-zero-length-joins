!!! 5

html(lang='en', ng-app='app')

  head
    meta(charset='utf-8')
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(name='viewport', content='width=device-width', initial-scale='1.0')

    title(ng-bind-template='{{pageTitle}}')

    link(rel='stylesheet', href='css/app.css')

    //if lte IE 8
      script(src='js/ie8.js')

    //- use jquery for IE only, zepto for other browsers      
    script
      document.write('<script src=js/vendor' + ('__proto__' in {} ? '': '-ie') + '.js><\/script>')
    //- or use jquery for all browsers
      script(src='js/vendor-ie.js')

    script(src='js/app.js')

  body(ng-view=true)
